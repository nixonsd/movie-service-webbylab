{
  "compilerOptions": {
    // File Layout
    "outDir": "dist",
    "baseUrl": ".",

    // Environment Settings
    "module": "commonjs",
    "target": "es2024",

    "strict": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}
